# {{ ansible_managed }}

version: '3.7'

services:
  syncthing:
    container_name: syncthing
    image: syncthing/syncthing
    restart: always
    security_opt:
      - no-new-privileges:true
    environment:
      - PUID=1000
      - PGID=1000
    volumes:
      - {{ syncthing__path }}/sync:/var/syncthing
    ports:
      - 22000:22000/tcp
      - 22000:22000/udp

networks:
  default:
    external:
      name: caddy-net
